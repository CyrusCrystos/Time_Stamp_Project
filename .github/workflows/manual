name: SonarCloud Scan

on:
  push:
    branches:
      - main
      - True-Branch
  pull_request:
    branches:
      - main
      - True-Branch

jobs:
  sonarcloud:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Java
        uses: actions/setup-java@v3
        with:
          distribution: temurin
          java-version: 11

      - name: Check Java version
        run: java -version

      - name: SonarCloud Scan
        uses: sonarsource/sonarqube-scan-action@m
